*/Calculate the factorial value using Non-recursion.*/
#include<stdio.h>
#include<conio.h>
int fact(int);
void main()
{
 int a,fac;
 clrscr();
 printf(" Enter any number: ");
 scanf("%d",a);

 fac=fact(a);
 printf(" Factorial value : %d",fac);
 getch();
}

	int fact(int x)
	{
	 int f=1,i;
	 for(i=x;i>=1;i--)
	 f=f*i;
	 return (f);
	}
